<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/app.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Special+Gothic+Expanded+One&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/logofinal.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.min.css">
  <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.min.js"></script>
  <title id="contactme">my portfolio.</title>

</head>
<body class="portfolio-page" data-scroll-container>
    <%- include('partials/header', { activePage: 'portfolio' }) %>
    
    <div class="video-bg-fixed">
        <video autoplay muted loop playsinline>
            <source src="/background.mp4" type="video/mp4" />
        </video>
    </div>

    <div class="container" style="padding-top: 150px;" data-scroll-section>   
        <h1 class="portheader" data-scroll data-scroll-speed="1">some of my work.</h1>

        <div class="work-container">
            <p1 class = "rowtitles" data-scroll data-scroll-speed="0.8">react.</p1>
            <section class="work-row row-1" data-scroll data-scroll-speed="0.9">
                
                <a href="/pizzaco" class="project-card" style="background-image: url('/pizzaco.png');">
                    <div class="card-content">
                        <p id="projectnames">pizza.co</p>
                    </div>
                </a>

                <a href="/travellist" class="project-card" style="background-image: url('/travellist.png')">
                    <div class="card-content">
                        <p id = "projectnames">travel list app</p>
                    </div>
                </a>

                <a href="/tasklist" class="project-card" style="background-image: url('/tasklist.png')">
                    <div class="card-content">
                        <p id = "projectnames">mobile task list app</p>
                    </div>
                </a>

            </section>
            

            <p1 class = "rowtitles" data-scroll data-scroll-speed="0.8">immersive technologies.</p1>
            <section class="work-row row-2" data-scroll data-scroll-speed="0.9">
                <a href="/namecard" class="project-card" style="background-image: url('/namecard.png');";">
                    <div class="card-content">
                        <p id = "projectnames">ar namecard</p>
                    </div>
                </a>

                <a href="/escaperoom" class="project-card" style="background-image: url('/wakeup.png')">
                    <div class="card-content">
                        <p id = "projectnames">WAKE.EXE</p>
                    </div>
                </a>
            </section>
            
            <p1 class = "rowtitles" data-scroll data-scroll-speed="0.8">ui/ux design.</p1>
            <section class="work-row row-3" data-scroll data-scroll-speed="0.9">
                <a href="/ecofashion" class="project-card" style="background-image: url('/ecofashion.png')">
                    <div class="card-content">
                        <p id = "projectnames">eco fashion web design</p>
                    </div>
                </a>
                <a href="/learnrp" class="project-card" style="background-image: url('/learnrp.png')">
                    <div class="card-content">
                        <p id = "projectnames">learn@rp app design</p>
                    </div>
                </a>
                <a href="/moodmatch" class="project-card" style="background-image: url('/moodmatch.png')">
                    <div class="card-content">
                        <p id = "projectnames">mood match app design</p>
                    </div>
                </a>
            </section>
            
            <p1 class = "rowtitles" data-scroll data-scroll-speed="0.8">graphic design.</p1>
            <section class="work-row row-4" data-scroll data-scroll-speed="0.9">
                <a href="/travelly" class="project-card" style="background-image: url('/travelly.png')">
                    <div class="card-content">
                        <p id = "projectnames">travelly ad</p>
                    </div>
                </a>
                <a href="/character" class="project-card" style="background-image: url('/character.png')">
                    <div class="card-content">
                        <p id = "projectnames">character design</p>
                    </div>
                </a>
                <a href="/typo" class="project-card" style="background-image: url('/typo.png')">
                    <div class="card-content">
                        <p id = "projectnames">typography art</p>
                    </div>
                </a>
            </section>
        </div>

        <div class="bottom-message" data-scroll data-scroll-speed="0.5">
            <p>you have reached the bottom</p>
        </div>
    </div>
  </div>

  <script>
    const scroll = new LocomotiveScroll({
        el: document.querySelector('[data-scroll-container]'),
        smooth: true,
        smoothMobile: true,
        multiplier: 1.2,
        lerp: 0.075,
        reloadOnContextChange: true
    });

    window.addEventListener('resize', () => {
        scroll.update();
    });
  </script>

</body>
</html>